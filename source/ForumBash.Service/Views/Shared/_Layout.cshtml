                    StackOverflow
                    <span id="issuesCount" class="badge bg-red text-count">0?</span>
                </a>
                @Html.ActionLink("User", "User", "Home", new { area = "" }, new { @class = "element" })
                <a href="#" id="navSTAT" class="element">Trend</a>
                <a href="/fb.svc/" class="element">Service</a>
                <a href="#" class="element place-right">About</a>
                <a href="#" id="o5" class="element place-right">Open Top 5 Links</a>
                <a href="#" id="refresh" class="element place-right">Refresh</a>
            </nav>
        </nav>

        <div class="container">
            <div>
                @RenderBody()
            </div>
            <div id="board">
            
            </div>
        </div>
    </body>
</html>
